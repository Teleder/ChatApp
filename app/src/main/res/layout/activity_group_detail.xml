<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <Button
            android:id="@+id/btn_members"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Members" />
        <Button
            android:id="@+id/btn_request_members"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request Members" />
        <Button
            android:id="@+id/btn_block_members"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blocked Members" />

        <Button
            android:id="@+id/btn_roles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Roles" />

        <Button
            android:id="@+id/btn_set_public_private"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set Group Public/Private" />

        <Button
            android:id="@+id/btn_delete_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Group" />

    </LinearLayout>

</ScrollView>
